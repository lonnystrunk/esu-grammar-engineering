noun_pc_abs_sg-lex-rule-super := add-only-no-ccont-rule & const-lex-rule &
  [ INFLECTED [ NOUN_PC_ABS_SG-OR-NOUN_PC_NON_ABS_SG-FLAG +,
                NOUN_PC_ABS_SG-FLAG +,
                VERB_INTRANS-VERB-FLAG #verb_intrans-verb,
                NOUN_PC_NON_ABS_SG-FLAG #noun_pc_non_abs_sg,
                VERB_TRANS-VERB-FLAG #verb_trans-verb,
                VERB_PC_DERIVATION1-FLAG #verb_pc_derivation1 ],
    DTR noun_pc_abs_sg-rule-dtr &
        [ INFLECTED [ VERB_INTRANS-VERB-FLAG #verb_intrans-verb,
                      NOUN_PC_NON_ABS_SG-FLAG #noun_pc_non_abs_sg,
                      VERB_TRANS-VERB-FLAG #verb_trans-verb,
                      VERB_PC_DERIVATION1-FLAG #verb_pc_derivation1 ] ] ].

