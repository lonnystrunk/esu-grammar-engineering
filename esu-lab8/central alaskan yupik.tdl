noun_pc_non_abs_sg-lex-rule-super := infl-lex-rule &
  [ INFLECTED [ NOUN_PC_NON_ABS_SG-FLAG +,
                NOUN_PC_ABS_SG-OR-NOUN_PC_NON_ABS_SG-FLAG +,
                VERB_INTRANS-VERB-FLAG #verb_intrans-verb,
                NOUN_PC_ABS_SG-FLAG #noun_pc_abs_sg,
                VERB_TRANS-VERB-FLAG #verb_trans-verb,
                VERB_PC_DERIVATION1-FLAG #verb_pc_derivation1 ],
    DTR noun_pc_non_abs_sg-rule-dtr &
        [ INFLECTED [ VERB_INTRANS-VERB-FLAG #verb_intrans-verb,
                      NOUN_PC_ABS_SG-FLAG #noun_pc_abs_sg,
                      VERB_TRANS-VERB-FLAG #verb_trans-verb,
                      VERB_PC_DERIVATION1-FLAG #verb_pc_derivation1 ] ] ].

nonpossessive-lex-rule-1 := add-only-no-ccont-rule &
  [ SYNSEM.LOCAL.CAT [ HEAD noun &
                            [ POSSESSOR nonpossessive ],
                       POSSESSUM nonpossessive ] ].

possessum-lex-rule-1 := cat-change-only-lex-rule &
  [ SYNSEM.LOCAL.CAT [ HEAD noun &
                            [ MOD < >,
                              POSSESSOR nonpossessive ],
                       POSSESSUM possessum-1,
                       VAL #val &
                           [ SPEC < >,
                             SPR < [ LOCAL.CAT [ VAL.SPR < >,
                                                 HEAD.POSSESSOR possessor-1 ] ] > ] ],
    C-CONT [ HCONS <!  !>,
             ICONS <!  !>,
             RELS <!  !> ],
    DTR.SYNSEM.LOCAL.CAT [ POSSESSUM nonpossessive,
                           HEAD.PRON -,
                           VAL #val ],
    ARGS < [ SYNSEM.LOCAL.CAT.HEAD.CASE erg ] > ].

poss-pron-lex-rule := noun_pc_non_abs_sg-lex-rule-super &
  [ SYNSEM.LOCAL.CAT [ HEAD #head,
                       VAL [ SPR < >,
                             SPEC #spec,
                             SUBJ #subj,
                             COMPS #comps ] ],
    C-CONT [ HOOK #hook,
             RELS <! noun-relation &
                     [ PRED "pron_rel",
                       LBL #lbl2,
                       ARG0 #possessor &
                            [ COG-ST activ-or-more,
                              SPECI + ] ], quant-relation &
                                           [ PRED "exist_q_rel",
                                             ARG0 #possessum,
                                             RSTR #harg ], arg12-ev-relation &
                                                           [ PRED "poss_rel",
                                                             LBL #lbl,
                                                             ARG1 #possessum,
                                                             ARG2 #possessor ], quant-relation &
                                                                                [ PRED "exist_q_rel",
                                                                                  ARG0 #possessor,
                                                                                  RSTR #harg2 ] !>,
             HCONS <! qeq &
                      [ HARG #harg,
                        LARG #lbl ], qeq &
                                     [ HARG #harg2,
                                       LARG #lbl2 ] !> ],
    DTR.SYNSEM.LOCAL [ CONT.HOOK #hook &
                                 [ INDEX #possessum &
                                         [ COG-ST activ-or-more ],
                                   LTOP #lbl ],
                       CAT [ HEAD #head &
                                  [ PRON - ],
                             VAL [ SPEC #spec,
                                   SUBJ #subj,
                                   COMPS #comps ] ] ] ].

